border-1px($color)
    position: relative
    &:after
        display: block
        position: absolute
        width: 100%
        left: 0
        bottom: 0
        border-top: 1px solid $color
        content: ' '

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixal-radio: 3), (min-device-pixal-radio: 3)
    background-image: url($url + "@3x.png")